FROM node:22

RUN mkdir -p /home/node/app/node_modules && chown -R node:node /home/node/app

WORKDIR /home/node/app

COPY package*.json ./

USER node

RUN npm ci

COPY --chown=node:node . .

RUN npm run build

RUN npm ci --only=production

#RUN chown -R nodejs:nodejs /app
#USER nodejs

EXPOSE 3001

CMD ["npm", "start"]
