# Server Configuration
PORT=3000
NODE_ENV=development

# Output Directory
OUTPUT_DIR=./output

# Debug Output Directory (для локальной отладки Docusaurus проектов)
DEBUG_OUTPUT_DIR=./output/debug

# Local Docs Output Directory (для генерации локальных Docusaurus проектов при localOnly=true)
# По умолчанию: ./generated-docs
LOCAL_DOCS_OUTPUT_DIR=./generated-docs

# Client Proxy URL
CLIENT_PROXY_URL=http://localhost:3001/api

# NPM Cache Directory (опционально, для ускорения установки зависимостей)
# NPM_CACHE_DIR=/home/node/.npm

# AWS S3 Configuration (Yandex Cloud)
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
AWS_ENDPOINT=https://storage.yandexcloud.net
AWS_REGION=ru-central1
AWS_S3_BUCKET=your-bucket-name
