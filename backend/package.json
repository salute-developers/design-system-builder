{
  "name": "ds-builder-backend",
  "version": "1.0.0",
  "description": "Backend for Design System Builder",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc && cp src/swagger/openapi.yml dist/swagger/ && cp src/swagger/admin-openapi.yml dist/swagger/",
    "start": "node dist/index.js",
    "generate": "drizzle-kit generate",
    "migrate": "drizzle-kit migrate",
    "studio": "drizzle-kit studio",
    "clear-db": "ts-node src/db/clear-database.ts",
    "extract-state": "ts-node src/db/extract-and-save-state.ts",
    "test": "vitest --run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch"
  },
  "dependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/js-yaml": "^4.0.9",
    "@types/pg": "^8.15.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "drizzle-kit": "^0.31.4",
    "drizzle-orm": "^0.43.1",
    "express": "^4.18.2",
    "js-yaml": "^4.1.0",
    "pg": "^8.16.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@electric-sql/pglite": "^0.3.2",
    "@types/node": "^20.11.19",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^3.2.1",
    "supertest": "^7.1.1",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.19.4",
    "typescript": "^5.3.3",
    "vitest": "^3.2.1"
  }
}
